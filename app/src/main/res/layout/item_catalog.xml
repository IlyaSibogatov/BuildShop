<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/size4"
    android:layout_marginHorizontal="@dimen/size4"
    app:cardCornerRadius="@dimen/size15"
    app:cardElevation="@dimen/size5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="@dimen/size75"
            android:layout_height="@dimen/size75"
            android:layout_margin="@dimen/size8"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/item_text_views"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/size8"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/PrimaryTextView"
                android:textColor="@color/black900"
                tools:text="Название" />

            <TextView
                android:id="@+id/price_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/size4"
                style="@style/SecondTextView"
                android:textColor="@color/black900"
                tools:text="Цена" />

            <TextView
                android:id="@+id/article_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/size4"
                style="@style/SecondTextView"
                android:textColor="@color/black900"
                tools:text="Артикул" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>